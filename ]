extern crate args;
extern crate ncurses;

mod config;
mod consts;
mod fft;

use config::Config;
use fft::fft;
use rodio::{source::Source, Decoder, OutputStream, Sink};
use std::fs::File;
use std::io::BufReader;
use std::time::Duration;

fn main() {
    let mut args = Config::new_args();

    if args.value_of("help").unwrap() {
        println!("{}", args.full_usage());

        return;
    }

    let config = Config::new_from_arguments(&mut args);

    let file = BufReader::new(File::open(config.audio_file_path).unwrap());
    let source = Decoder::new(file).unwrap();

    let (_stream, stream_handle) = OutputStream::try_default().unwrap();


    {
        let clip = &source.take_duration(Duration::from_millis(20 * 4));
        let i = 20;

        let thing = &source.take_duration();
    }
}
